#include <Wire.h>
#include "MAX30105.h"
#include "heartRate.h"
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

// ===== OLED =====
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define OLED_RESET    -1
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

// ===== I2C ESP32-C3 =====
#define I2C_SDA 8
#define I2C_SCL 9

// ===== MAX30102 =====
MAX30105 particleSensor;

// ===== BPM =====
uint32_t lastBeat = 0;
float bpm = 0;
int bpmInt = 0;

// làm mượt
#define RATE_SIZE 6
float rates[RATE_SIZE];
byte rateSpot = 0;

// ngưỡng phát hiện tay
#define IR_THRESHOLD 10000

void setup() {
  Serial.begin(115200);

  Wire.begin(I2C_SDA, I2C_SCL);

  // ===== OLED INIT =====
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println("OLED không tìm thấy");
    while (1);
  }

  display.clearDisplay();
  display.setTextColor(SSD1306_WHITE);

  // ===== MAX30102 INIT =====
  if (!particleSensor.begin(Wire, I2C_SPEED_FAST)) {
    display.setTextSize(1);
    display.setCursor(0, 0);
    display.println("MAX30102 ERROR");
    display.display();
    while (1);
  }

  // cấu hình tối ưu
  particleSensor.setup(
    0x1F,   // LED brightness
    4,      // Sample avg
    2,      // RED + IR
    400,    // Sample rate
    411,    // ADC range
    16384   // Pulse width
  );

  particleSensor.setPulseAmplitudeRed(0x1F);
  particleSensor.setPulseAmplitudeIR(0x1F);

  showWaiting();
}

void loop() {
  long irValue = particleSensor.getIR();

  // không có tay
  if (irValue < IR_THRESHOLD) {
    showWaiting();
    delay(300);
    return;
  }

  // phát hiện nhịp tim
  if (checkForBeat(irValue)) {
    uint32_t now = millis();
    float delta = (now - lastBeat) / 1000.0;
    lastBeat = now;

    bpm = 60.0 / delta;

    if (bpm > 45 && bpm < 180) {
      rates[rateSpot++] = bpm;
      rateSpot %= RATE_SIZE;

      float avg = 0;
      for (byte i = 0; i < RATE_SIZE; i++) avg += rates[i];
      avg /= RATE_SIZE;

      bpmInt = round(avg);
      showBPM(bpmInt);
    }
  }
}

// ===== HIỂN THỊ =====
void showWaiting() {
  display.clearDisplay();
  display.setTextSize(1);
  display.setCursor(20, 10);
  display.println("DAT NGON TAY");

  display.setTextSize(2);
  display.setCursor(15, 30);
  display.println("...");
  display.display();
}

void showBPM(int bpmValue) {
  display.clearDisplay();

  display.setTextSize(1);
  display.setCursor(35, 0);
  display.println("HEART RATE");

  display.setTextSize(3);
  display.setCursor(20, 20);
  display.print(bpmValue);
  display.println(" BPM");

  display.display();
}
